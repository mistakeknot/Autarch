{
  "$schema": "https://raw.githubusercontent.com/anthropics/claude-code/main/schemas/hooks.json",
  "_comment": "Claude Code hooks for Autarch/Bigend agent state tracking",

  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.autarch/hooks/emit-state.sh working claude",
            "timeout": 5
          }
        ]
      }
    ],

    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.autarch/hooks/emit-state.sh working claude",
            "timeout": 5
          }
        ]
      }
    ],

    "PreToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.autarch/hooks/emit-state.sh executing_tool claude",
            "timeout": 5
          }
        ]
      }
    ],

    "PermissionRequest": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.autarch/hooks/emit-state.sh blocked claude",
            "timeout": 5
          }
        ]
      }
    ],

    "PostToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.autarch/hooks/emit-state.sh working claude",
            "timeout": 5
          }
        ]
      }
    ],

    "PostToolUseFailure": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.autarch/hooks/emit-state.sh error claude",
            "timeout": 5
          }
        ]
      }
    ],

    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.autarch/hooks/emit-state.sh waiting claude",
            "timeout": 5
          }
        ]
      }
    ],

    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.autarch/hooks/emit-state.sh done claude",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
